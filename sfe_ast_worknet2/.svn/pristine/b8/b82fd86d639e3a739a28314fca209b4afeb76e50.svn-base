@charset "utf-8";

/* TextArea */
.webix_textarea_edit {
	width:100%;
	height:100%; 
	box-sizing: border-box;
	-moz-box-sizing: border-box; 
	-webkit-box-sizing: border-box; 
	resize: none;
}

/* ComboBox */
.webix_el_combo .webix_el_box {
	padding: 2px 0px;
}

.webix_el_combo input {
	font-size: 12px;
	border: 1px solid #cacece;
	border-radius: 2px;
	padding-left: 5px;
}

/* Alert */
.webix_modal_box.webix_confirm .webix_popup_text {
	margin: 0 0 5px;
	box-shadow: 0 3px #da1e48 inset;
	padding-top: 30px;
	min-height: 40px;
}

.webix_modal_box.webix_confirm .webix_popup_text > span {
	margin: 0 5px;
}

.webix_modal_box.webix_confirm .webix_popup_button.confirm div {
    font-size: 15px;
    padding: auto 6px;
    font-family: 'PT Sans',Tahoma;
    border: 1px solid #3498db;
    outline: 0;
    background: #da1e48;
    border-color: #da1e48;
    border-bottom: 1px solid #da1e48;
    box-shadow: none;
    text-shadow: none;
    color: #fff;
}

/* 날짜선택기 */
.webix_view.webix_control.webix_el_datepicker { 
	height:26px !important; box-sizing:border-box; border:1px solid #ccc; border-radius:0;
	cursor: pointer; 
}

.webix_el_datepicker .webix_el_box .webix_inp_static {
	border: 0px;
	padding: 1px 6px;
}

/* (180510, 김영도) Datepicker 직접입력 추가로 인한 CSS 수정 */
.webix_el_datepicker .webix_el_box > input {
	border: 0px;
	padding: 0px 5px;
}

.webix_input_icon.fa-calendar {
	padding-top: 0px !important;
	cursor: pointer;
}

.webix_input_icon.fa-calendar:before {
	content:""; /*removes FontAwesome icon */
	background: url(../images/icon_calendar.png) no-repeat center center;
	right:5px;
	width:20px;
	height:20px;
	display:block;
}
/* 날짜선택기 End */

/* 트리 그리드 */
.webix_tree_folder, .webix_tree_folder_open, .webix_tree_file,
.webix_tree_close, .webix_tree_open {
	background-size: 320px 96px;
	background-image: url(../images/jstree/32px.png);
}
.webix_tree_folder {
    background-position: -266px -3px;
}
.webix_tree_folder_open {
	margin: 0px 3px 0px 0px;
	background-position: -107px -68px;
}
.webix_tree_file {
	/*background-position: -168px -3px;*/
	background-position: -266px -3px;
}
.webix_tree_open {
	margin: 2px 4px 0px 0px;
    background-position: -38px -5px;
}
.webix_tree_close {
	margin: 2px 4px 0px 0px;
    background-position: -5px -5px;
}

